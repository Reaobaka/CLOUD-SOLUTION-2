        }

            .menu-item a {
                color: black;
                padding: 5px;
                display: inline-block;
                font-weight: bold;
            }

            .menu-item:last-child {
                margin-right: 0;
            }

        .image-item {
            display: flex;
            flex-direction: column;
            text-align: center;
            background-color: white;
            padding: 5px;
            max-width: 200px;
            border-radius: 10px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            opacity: 1;
        }

            .image-item img {
                width: 200px;
                height: 150px;
                object-fit: cover;
                border-radius: 5px;
                transition: transform 0.3s ease;
            }

            .image-item:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

            .image-item img:hover {
                transform: scale(1.03);
            }

            .image-item p {
                margin: 5px 0;
                font-size: 0.9rem;
                color: #333;
                font-weight: bold;
            }

        button {
            margin: 5px;
            padding: 10px 15px;
            border-radius: 10px;
            background-color: beige;
            color: black;
            font-family: 'Times New Roman';
            cursor: pointer;
            border: black;
        }

            button:hover {
                background-color: #0056b3;
                color: white;
            }

        .modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            max-width: 80%;
            max-height: 80%;
            overflow-y: auto;
        }

            .modal img {
                width: 100px;
                height: 75px;
                object-fit: cover;
                border-radius: 5px;
                margin-right: 15px;
            }

        .modal-content {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 10px;
        }

            .modal-content p {
                margin: 0;
            }

